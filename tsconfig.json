{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es5",
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitReturns": true,
        //        "noUnusedLocals": true,
        "baseUrl": "src/",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "build",
        "node_modules"
    ],
    "paths": {
    }
}
